{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "es2019"],
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist/",
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "tmp", "**/*.test.ts", "**/*.spec.ts"],
}
