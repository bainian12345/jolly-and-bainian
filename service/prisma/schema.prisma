generator client {
  provider = "prisma-client-js"
  output   = "prisma-client"
}

datasource db {
  provider = "postgresql"
}

model Invitation {
  id               String    @id @default(uuid()) @db.Uuid
  key              String?
  maxGuests        Int       @default(2)
  dateTimeAccepted DateTime? @db.Timestamp(6)
  guests           Guest[]
}

model Guest {
  id           String  @id @default(uuid()) @db.Uuid
  firstName    String
  lastName     String
  email        String?
  mealOption   String
  invitationId String  @db.Uuid

  invitation Invitation @relation(fields: [invitationId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([firstName, lastName])
}
